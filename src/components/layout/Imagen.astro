---
import { ImageMetadata } from "astro";
import { Image } from "astro:assets";
interface Props {
  img: ImageMetadata;
  calidad?: string;
  alt: string;
  imgClass: string;
}
const { img, calidad = "mid", alt, imgClass } = Astro.props;
---

<Image
  src={img}
  quality={calidad}
  loading="lazy"
  format="avif"
  alt={alt}
  class={imgClass}
/>
