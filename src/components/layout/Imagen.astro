---
import { ImageMetadata } from "astro";
import { Image } from "astro:assets";
interface Props {
  img: ImageMetadata;
  calidad?: string;
  alt: string;
  ImgClass?: string;
}
const {
  img,
  calidad = "mid",
  alt,
  ImgClass = "rounded-lg w-[300px] h-[300px]",
} = Astro.props;
---

<Image
  src={img}
  quality={calidad}
  loading="lazy"
  format="avif"
  alt={alt}
  class={ImgClass}
/>
