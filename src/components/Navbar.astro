---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  { title: "Home", path: "/Portfolio/" },
  { title: "Projects", path: "/Portfolio/projects" },
  { title: "About", path: "/Portfolio/about" },
];
---

<div>
  <div class="max-w-[1400px] mx-auto">
    <header
      class="flex flex-col lg:flex-row justify-between items-center gap-5 p-5"
    >
      <Astronav>
        <div
          class="flex w-full lg:w-auto items-center justify-between lg:justify-between"
        >
          <a
            href="/Portfolio/"
            class="text-2xl flex items-center"
            aria-label="Index Volcán y café - Agencia Turística"
          >
            <span>Leo Portfolio</span>
          </a>

          <div class="block lg:hidden px-4">
            <MenuIcon class="w-4 h-4" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <div class="flex flex-col lg:flex-row">
            {
              menuitems.map((item) => (
                <ul>
                  <li class="flex px-4   p-2">
                    <a
                      href={item.path}
                      class=" hover:underline text-lg  hover:scale-110 duration-300 "
                      aria-label={item.title}
                    >
                      {item.title}
                    </a>
                  </li>
                </ul>
              ))
            }
          </div>
          <a
            href="https://github.com/Leo0114"
            target="_blank"
            class="py-2 flex px-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-brand-github "
              width="25"
              height="25"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="#2c3e50"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
              ></path>
            </svg></a
          >
        </MenuItems>
      </Astronav>
    </header>
  </div>
</div>
